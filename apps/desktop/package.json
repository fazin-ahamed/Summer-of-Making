{
  "name": "@autoorganize/desktop",
  "version": "0.1.0",
  "description": "AutoOrganize Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite --port 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "clean": "rm -rf dist build",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@autoorganize/types": "workspace:*",
    "@autoorganize/utils": "workspace:*",
    "@trpc/client": "^10.34.0",
    "@trpc/react-query": "^10.34.0",
    "@tanstack/react-query": "^4.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "recoil": "^0.7.7",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "tailwindcss": "^3.3.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.7.2",
    "react-hotkeys-hook": "^4.4.1",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8",
    "d3": "^7.8.5",
    "cytoscape": "^3.25.0",
    "cytoscape-dagre": "^2.5.0",
    "react-cytoscapejs": "^2.0.0",
    "react-hot-toast": "^2.4.1",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-window": "^1.8.5",
    "@types/d3": "^7.4.0",
    "@types/cytoscape": "^3.19.9",
    "@vitejs/plugin-react": "^4.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
    "@types/node": "^20.5.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1",
    "identity-obj-proxy": "^3.0.0",
    "msw": "^1.3.0",
    "@faker-js/faker": "^8.1.0"
  },
  "build": {
    "appId": "com.autoorganize.desktop",
    "productName": "AutoOrganize",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
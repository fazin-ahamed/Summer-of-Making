{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@autoorganize/types": ["./shared/types/src"],
      "@autoorganize/utils": ["./shared/utils/src"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "backend/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rust-core",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}